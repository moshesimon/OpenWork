DATABASE_URL="file:./prisma/dev.db"
AI_PROVIDER="anthropic"

# Vercel AI SDK provider models
OPENAI_MODEL="gpt-4.1-mini"
ANTHROPIC_MODEL="claude-haiku-4-5"

# OPENAI_API_KEY=""
# Optional OpenAI override (base URL, not full endpoint):
# OPENAI_API_URL="https://api.openai.com/v1"

# ANTHROPIC_API_KEY=""
# Optional overrides:
# ANTHROPIC_API_URL="https://api.anthropic.com/v1"
# ANTHROPIC_API_VERSION="2023-06-01"
# ANTHROPIC_MAX_TOKENS="900"

# Trigger.dev
# TRIGGER_SECRET_KEY=""
# TRIGGER_PROJECT_REF=""
# TRIGGER_API_URL="https://api.trigger.dev"

# Unified system-event turn guardrail. Set to "false" to pause DM/channel/bootstrap-triggered turns.
# AGENT_SYSTEM_EVENT_TURNS_ENABLED="true"

# Company files sidebar source directory (relative to repo root or absolute path)
# WORKSPACE_FILES_ROOT="company_files"

# Optional external search backends for global search.
# Leave unset to use the built-in native search implementation.
# Local adapters in this app:
# CHATINDEX_SEARCH_URL="http://localhost:3000/api/search/chatindex"
# PAGEINDEX_SEARCH_URL="http://localhost:3000/api/search/pageindex"
# Example external FastAPI wrappers:
# CHATINDEX_SEARCH_URL="http://localhost:8101/search"
# PAGEINDEX_SEARCH_URL="http://localhost:8102/search"
# OFFICEINDEX_SEARCH_URL="http://localhost:8103/search"

# Optional OfficeIndex lifecycle controls (Phase 3)
# OFFICEINDEX_REFRESH_INTERVAL_SECONDS="25"
# OFFICEINDEX_BACKGROUND_SYNC_SECONDS="0"
# OFFICEINDEX_INCLUDE_PDF="false"
# OFFICEINDEX_EXTRACT_TIMEOUT_SECONDS="8"
# OFFICEINDEX_OPENSEARCH_URL="http://localhost:9200"
# OFFICEINDEX_OPENSEARCH_PIPELINE="attachment"
# OFFICEINDEX_OPENSEARCH_USERNAME=""
# OFFICEINDEX_OPENSEARCH_PASSWORD=""

# Optional Univer exchange endpoints (required for .xlsx/.docx import/export through Univer)
# If omitted, the client falls back to same-origin defaults like /universer-api/...
# NEXT_PUBLIC_UNIVER_UPLOAD_FILE_URL="https://your-univer-adapter.example/upload"
# NEXT_PUBLIC_UNIVER_IMPORT_URL="https://your-univer-adapter.example/import"
# NEXT_PUBLIC_UNIVER_EXPORT_URL="https://your-univer-adapter.example/export"
# NEXT_PUBLIC_UNIVER_TASK_URL="https://your-univer-adapter.example/task"
# NEXT_PUBLIC_UNIVER_SIGN_URL="https://your-univer-adapter.example/sign-url"
# NEXT_PUBLIC_UNIVER_DOWNLOAD_ENDPOINT_URL="https://your-univer-adapter.example"
